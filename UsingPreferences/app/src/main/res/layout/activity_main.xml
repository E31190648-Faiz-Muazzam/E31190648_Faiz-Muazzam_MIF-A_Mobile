<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">
    <!--Bertujuan sebagai wadah beberapa objek yang akan di buat-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <!-- Bertujuan Memberikan keterengan masuk sebagai -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Masuk sebagai"/>
        <!-- Bertujuan Menampilkan informasi siapa yang melakukan login-->
        <TextView
            android:id="@+id/tv_namaMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            tools:text="Namaku adalah"/>
    </LinearLayout>
    <!--Bertujuan untuk membuat wadah untuk objek button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--Button untuk ekseskusi perintah logout-->
        <Button
            android:id="@+id/button_logoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Log Out" />
        <!--Button untuk masuk kehalaman Login-->
        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kembali" />
    </LinearLayout>

</RelativeLayout>